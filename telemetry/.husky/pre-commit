cd telemetry && NODE_OPTIONS=--experimental-strip-types pnpx lint-staged --verbose
# Lint workflow files when staged (lint-staged only sees files under telemetry/)
cd "$(git rev-parse --show-toplevel)" && if git diff --cached --name-only | grep -qE '^.github/workflows/.*\.(yml|yaml)$'; then sh telemetry/scripts/run-actionlint.sh; fi
